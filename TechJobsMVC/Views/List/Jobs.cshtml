<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @foreach (Job job in ViewBag.jobs)
    {
        <table class="job-listing">
            <tr>
                <th>ID</th>
                <th>@job.Id</th>
            </tr>
            <tr>
                <th>Name</th>
                <th>@job.Name</th>
            </tr>
            <tr>
                <th>Employer</th>
                <th>@job.Employer.Value</th>
            </tr>
            <tr>
                <th>Location</th>
                <th>@job.Location.Value</th>
            </tr>
            <tr>
                <th>Position Type</th>
                <th>@job.PositionType.Value</th>
            </tr>
            <tr>
                <th>Skill</th>
                <th>@job.CoreCompetency.Value</th>
            </tr>
        </table>
    }
</div>